# Exemplo de variáveis de ambiente
# Copie este arquivo para .env.local (desenvolvimento) ou .env (AWS)

# ===== AMBIENTE =====
ENVIRONMENT=local
# Opções: local, production, staging

# ===== FRONTEND =====
# URL base para acesso ao frontend (usado pelo backend para CORS)
FRONTEND_URL=http://localhost

# ===== BACKEND =====
# URL base do backend (usado pelo frontend para chamadas API)
BACKEND_URL=http://localhost:8081

# ===== DATABASE =====
MYSQL_ROOT_PASSWORD=admin123
MYSQL_DATABASE=safestockDB
MYSQL_USER=safestock_app
MYSQL_PASSWORD=admin123
MYSQL_HOST=mysql
MYSQL_PORT=3306

# ===== RABBITMQ =====
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# ===== REDIS =====
REDIS_HOST=redis
REDIS_PORT=6379

# ===== SPRING =====
SPRING_PROFILES_ACTIVE=dev
# Opções: dev, prod

# ===== JWT =====
JWT_VALIDITY=3600000
JWT_

# ===== SERVIDOR GERAL =====
SERVER_PORT=8080
LOAD_BALANCER_PORT=80

# ===== BUILD FRONTEND =====
VITE_API_BASE_URL=/api
