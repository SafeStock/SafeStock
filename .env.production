# Variáveis para ambiente AWS (produção)
# IMPORTANTE: Substitua os valores abaixo pelos reais da sua EC2

ENVIRONMENT=production

# Substitua pelo IP Elástico ou Domain da sua EC2
FRONTEND_URL=http://seu-eip-aqui.com
BACKEND_URL=http://seu-eip-aqui.com/api

SPRING_PROFILES_ACTIVE=prod

# Database (conectar via EIP interno ou DNS da EC2)
MYSQL_HOST=mysql
MYSQL_ROOT_PASSWORD=admin123
MYSQL_DATABASE=safestockDB
MYSQL_USER=safestock_app
MYSQL_PASSWORD=admin123

# Message Queue
RABBITMQ_HOST=rabbitmq
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# Cache
REDIS_HOST=redis

# JWT
JWT_VALIDITY=3600000

