# Dockerfile para DESENVOLVIMENTO - Frontend SafeStock
FROM node:20-alpine

WORKDIR /app

# Instalar dependências
COPY package*.json ./
COPY dayjs-1.11.10.tgz ./
RUN npm ci

# Copiar arquivos de configuração
COPY vite.config.js ./
COPY tailwind.config.js ./
COPY eslint.config.js ./
COPY index.html ./

# Expor porta do Vite dev server
EXPOSE 5173

# Rodar Vite em modo desenvolvimento (com hot reload)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]